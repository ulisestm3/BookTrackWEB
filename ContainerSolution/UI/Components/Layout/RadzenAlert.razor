@inject DialogService DialogService

<div style="padding: 1.5rem; text-align: center; max-width: 400px;">
    <RadzenIcon Icon="@Icon" Style="@IconStyle" />
    <RadzenHeading Size="5" Text="@Title" Style="margin-top: 1rem;" />
    <p style="@StyleMessage">@Message</p>

    <RadzenButton Text="Aceptar"
    Style="@ButtonStyle"
    Click="() => DialogService.Close()" />
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public eIcon Type { get; set; } = eIcon.info;
    [Parameter] public eAlign eAlign { get; set; } = eAlign.center;

    public string Icon => Type switch
    {
        eIcon.success => "check_circle",
        eIcon.warning => "warning",
        eIcon.error => "error_outline",
        _ => "info"
    };

    public string IconColor => Type switch
    {
        eIcon.success => "#22c55e",
        eIcon.warning => "#eab308",
        eIcon.error => "#ef4444",
        _ => "#3b82f6"
    };

    public string ButtonColor => Type switch
    {
        eIcon.success => "#22c55e",
        eIcon.warning => "#eab308",
        eIcon.error => "#ef4444",
        _ => "#3b82f6"
    };
    public string TextAlign => eAlign switch { 
        eAlign.left => "left",
        eAlign.right => "right",
        eAlign.justify => "justify",
        _=> "center"
    };

    public string IconStyle => $"font-size: 4rem; color: {IconColor};";
    public string ButtonStyle => $"margin-top: 1.5rem; background-color: {ButtonColor}; color: white;";
    public string StyleMessage => $"margin-top: 1rem; text-align: {eAlign}; font-size: 1rem; line-height: 1.6; color: #374151; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;";
}
